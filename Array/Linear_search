#include<bits/stdc++.h>
using namespace std;
void linear_search(int a[],int size,int item)
{
     if(size==0)
    {
        cout<<"array is empty."<<endl;
    }

    for(int i=0; i<size; i++)
    {
        if(a[i]==item)
        {
            cout<<"Item is found at position:"<<i<<endl;
        }

    }
}
int main()
{
    int a[150]= {1,2,3,4,5,7,8,42,13,3};
    int size = sizeof(a);
    cout<<"size of array:"<<size<<endl;

    int item ;
    cout<<"Enter a item:";
    cin>>item;

    linear_search(a,size,item);


}
